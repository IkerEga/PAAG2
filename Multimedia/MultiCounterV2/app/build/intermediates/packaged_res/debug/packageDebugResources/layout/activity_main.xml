<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- GuÃ­as: columna centro y filas -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineCenter"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideRow1"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideRow2"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Top: RESET ALL + total -->
    <Button
        android:id="@+id/btnResetAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET ALL"
        android:backgroundTint="#F44336"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txtClickKopurua4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/btnResetAll"
        app:layout_constraintTop_toTopOf="@id/btnResetAll"
        app:layout_constraintBottom_toBottomOf="@id/btnResetAll"
        android:layout_marginStart="16dp"/>

    <!-- ===== Columna IZQUIERDA ===== -->
    <!-- Fila 1: btnGehitu8  txtClickKopurua5  btnReset1 -->
    <Button
        android:id="@+id/btnGehitu8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1"
        android:backgroundTint="#009688"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideRow1"
        app:layout_constraintBottom_toBottomOf="@id/guideRow1"
        android:layout_marginStart="24dp"/>

    <TextView
        android:id="@+id/txtClickKopurua5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="61dp"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/btnGehitu8"
        app:layout_constraintStart_toEndOf="@id/btnGehitu8"
        app:layout_constraintTop_toTopOf="@id/btnGehitu8"
        app:layout_constraintVertical_bias="0.541" />

    <Button
        android:id="@+id/btnReset1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:backgroundTint="#FF9800"
        app:layout_constraintStart_toEndOf="@id/txtClickKopurua5"
        app:layout_constraintEnd_toStartOf="@id/guidelineCenter"
        app:layout_constraintTop_toTopOf="@id/txtClickKopurua5"
        app:layout_constraintBottom_toBottomOf="@id/txtClickKopurua5"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"/>

    <!-- Fila 2: btnGehitu7  txtClickKopurua3  btnReset2 -->
    <Button
        android:id="@+id/btnGehitu7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1"
        android:backgroundTint="#009688"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideRow2"
        app:layout_constraintBottom_toBottomOf="@id/guideRow2"
        android:layout_marginStart="24dp"/>

    <TextView
        android:id="@+id/txtClickKopurua3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/btnGehitu7"
        app:layout_constraintTop_toTopOf="@id/btnGehitu7"
        app:layout_constraintBottom_toBottomOf="@id/btnGehitu7"
        android:layout_marginStart="61dp"/>

    <Button
        android:id="@+id/btnReset2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:backgroundTint="#FF9800"
        app:layout_constraintStart_toEndOf="@id/txtClickKopurua3"
        app:layout_constraintEnd_toStartOf="@id/guidelineCenter"
        app:layout_constraintTop_toTopOf="@id/txtClickKopurua3"
        app:layout_constraintBottom_toBottomOf="@id/txtClickKopurua3"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"/>

    <!-- ===== Columna DERECHA ===== -->
    <!-- Fila 1: btnGehitu6  txtClickKopurua2  btnReset3 -->
    <Button
        android:id="@+id/btnGehitu6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1"
        android:backgroundTint="#009688"
        app:layout_constraintStart_toStartOf="@id/guidelineCenter"
        app:layout_constraintTop_toTopOf="@id/guideRow1"
        app:layout_constraintBottom_toBottomOf="@id/guideRow1"
        android:layout_marginStart="24dp"/>

    <TextView
        android:id="@+id/txtClickKopurua2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="61dp"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/btnGehitu6"
        app:layout_constraintStart_toEndOf="@id/btnGehitu6"
        app:layout_constraintTop_toTopOf="@id/btnGehitu6"
        app:layout_constraintVertical_bias="0.541" />

    <Button
        android:id="@+id/btnReset3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:backgroundTint="#FF9800"
        app:layout_constraintStart_toEndOf="@id/txtClickKopurua2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtClickKopurua2"
        app:layout_constraintBottom_toBottomOf="@id/txtClickKopurua2"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"/>

    <!-- Fila 2: btnGehitu5  txtClickKopurua1  btnReset4 -->
    <Button
        android:id="@+id/btnGehitu5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1"
        android:backgroundTint="#009688"
        app:layout_constraintStart_toStartOf="@id/guidelineCenter"
        app:layout_constraintTop_toTopOf="@id/guideRow2"
        app:layout_constraintBottom_toBottomOf="@id/guideRow2"
        android:layout_marginStart="24dp"/>

    <TextView
        android:id="@+id/txtClickKopurua1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/btnGehitu5"
        app:layout_constraintTop_toTopOf="@id/btnGehitu5"
        app:layout_constraintBottom_toBottomOf="@id/btnGehitu5"
        android:layout_marginStart="61dp"/>

    <Button
        android:id="@+id/btnReset4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:backgroundTint="#FF9800"
        app:layout_constraintStart_toEndOf="@id/txtClickKopurua1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtClickKopurua1"
        app:layout_constraintBottom_toBottomOf="@id/txtClickKopurua1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
